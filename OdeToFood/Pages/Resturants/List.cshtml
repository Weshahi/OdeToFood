@page
@model OdeToFood.ListModel
@{
    ViewData["Title"] = "List";
}

<h2>Resturants</h2>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search "> </i>
                </button>
            </span>
        </div>
    </div>

</form>

<table class="table">
    @foreach (var resturant in Model.Resturants)
    {
        <tr>
            <td>@resturant.Name</td>
            <td>@resturant.Location</td>
            <td>@resturant.Cuisine</td>
            <td>
                <a class="btn btn-lg" asp-page="./Detail" asp-route-resturantId="@resturant.Id">
                    <i class="glyphicon glyphicon-zoom-in"></i>
                </a>
            </td>
            <td>
                <a class="btn btn-lg" asp-page="./Edit" asp-route-resturantId="@resturant.Id">
                    <i class="glyphicon glyphicon-edit"></i>
                </a>
            </td>
        </tr>
    }
</table>

<a asp-page="./Edit" class="btn btn-primary">Add New</a>

<div>
    @Model.Message
</div>
